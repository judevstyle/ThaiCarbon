<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <include layout="@layout/view_toolbar"
        android:id="@+id/v1"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/v1"
        android:id="@+id/lv1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/menu1"
            android:background="@drawable/bg_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/primary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bill_1"/>
                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="วางบิล"/>

            </LinearLayout>




        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu2"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/primary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bill_2"/>
                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="เก็บเงิน"/>

            </LinearLayout>




        </FrameLayout>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/lv2"
        app:layout_constraintTop_toBottomOf="@id/lv1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/menu3"
            android:background="@drawable/bg_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/primary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_menu"/>
                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="อื่น ๆ"/>

            </LinearLayout>




        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu4"
            android:layout_marginStart="20dp"
            android:background="@drawable/bg_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/primary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bill_mess"/>
                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="การทำงาน"/>

            </LinearLayout>




        </FrameLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv3"
        app:layout_constraintTop_toBottomOf="@id/lv2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/menu5"
            android:background="@drawable/bg_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    app:tint="@color/primary"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_profile"/>
                <com.ssoft.common.widget.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="ข้อมูลส่วนตัว"/>

            </LinearLayout>




        </FrameLayout>

        <FrameLayout
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp">





        </FrameLayout>



    </LinearLayout>


    <com.ssoft.common.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="ออกจากระบบ"
        android:id="@+id/logoutAction"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>